{
  "manifest_version": 3,

  "name": "Typio Form Recovery Reboot",
  "short_name": "Typio Reboot",
  "description": "Autosave, everywhere. Recover lost form input with ease!",
  "version": "4.0.0",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },

  "permissions": [
    "tabs",
    "storage",
    "contextMenus",
    "unlimitedStorage",
    "idle"
  ],

  "host_permissions": ["<all_urls>"],

  "optional_permissions": ["downloads"],

  "background": {
    "service_worker": "js/background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "all_frames": false,
      "js": ["js/content.js"]
    },

    {
      "matches": ["<all_urls>"],
      "match_about_blank": true,
      "run_at": "document_end",
      "all_frames": true,
      "js": ["js/content.frameInjector.js"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["img/*"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["css/*.css"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["fonts/*"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["templates/*"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["html/app.html"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["js/content.frameInjector.js"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["js/*.js.map"],
      "matches": ["<all_urls>"]
    }
  ],

  "options_ui": {
    "page": "html/app.html",
    "open_in_tab": true
  },

  "action": {
    "default_icon": {
      "16": "img/icon16.png",
      "38": "img/icon38.png"
    },
    "default_title": "Typio Form recovery",
    "default_popup": "html/popup.html"
  }
}
